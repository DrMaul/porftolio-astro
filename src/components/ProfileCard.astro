import MapIcon from '../icons/Map.astro'
---

<div class="w-1/3 border border-white/10  rounded-lg shadow bg-black/20">
    <div class="flex flex-col items-center py-10">
        <img class="w-24 h-24 mb-3 rounded-full shadow-lg" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="portfolio photo"/>
