---
const {name, description,icon: IconComponent} = Astro.props
---

<div class="border border-white/10  rounded-lg shadow bg-black/20 hover:bg-white/10 transition">
    <div class="flex flex-col items-center py-5">
        <IconComponent/>
        <h4 class="mb-1 text-xl font-medium text-white">{name}</h4>
        <p class="ms-2 text-center text-xs font-light opacity-80">{description}</p> 
        <div class="flex mt-3">
            <a href="#" class="py-2 px-4 ms-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 ">Solicitar servicio</a>
        </div>
    </div>
</div>